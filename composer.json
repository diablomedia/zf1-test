{
    "name": "diablomedia/zendframework1-test",
    "description": "Zend Framework 1 Test component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "require": {
        "php": "~8.1.0 || ~8.2.0 || ~8.3.0 || ~8.4.0 || ~8.5.0",
        "diablomedia/zendframework1-exception": "dev-php-85 as 1.1.1",
        "diablomedia/zendframework1-loader": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-registry": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-controller": "dev-php-85 as 1.0.6",
        "diablomedia/zendframework1-application": "dev-php-85 as 1.0.8",
        "diablomedia/zendframework1-db": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-dom": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-filter": "dev-php-85 as 1.0.6",
        "diablomedia/zendframework1-layout": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-session": "dev-php-85 as 1.1.3 || ^2.0.0",
        "phpunit/phpunit": "^10.5.0",
        "sebastian/comparator": "^5.0.1"
    },
    "autoload": {
        "psr-0": {
            "Zend_Test_": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "2.1.17",
        "friendsofphp/php-cs-fixer": "3.75.0",
        "diablomedia/zendframework1-controller-action-helper-json": "dev-php-85 as 1.0.5",
        "diablomedia/zendframework1-dojo": "dev-php-85 as 1.0.5",
        "maglnet/composer-require-checker": "^3.0.0",
        "phpro/grumphp-shim": "^2.0.0"
    },
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -c phpstan.neon --no-progress --ansi --memory-limit=768M",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    },
    "suggest": {
        "ext-dom": "Required for the DomQuery constraint"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        }
    },
    "minimum-stability": "dev"
}
