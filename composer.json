{
    "name": "diablomedia/zendframework1-test",
    "description": "Zend Framework 1 Test component",
    "type": "library",
    "keywords": [
        "framework",
        "zf1"
    ],
    "homepage": "http://framework.zend.com/",
    "license": "BSD-3-Clause",
    "prefer-stable": true,
    "minimum-stability": "dev",
    "require": {
        "php": "^7.4 || ~8.0.0 || ~8.1.0 || ~8.2.0",
        "diablomedia/zendframework1-exception": "dev-master as 1.0.0",
        "diablomedia/zendframework1-loader": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-registry": "dev-php-82 as 1.0.2",
        "diablomedia/zendframework1-controller": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-application": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-db": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-dom": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-filter": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-layout": "dev-php-82 as 1.0.0",
        "diablomedia/zendframework1-session": "dev-php-82 as 1.0.0",
        "phpunit/phpunit": "^9.5.10",
        "sebastian/comparator": "^4.0"
    },
    "autoload": {
        "psr-0": {
            "Zend_Test_": "src/"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "Zend_": "tests/"
        }
    },
    "require-dev": {
        "phpstan/phpstan": "1.10.13",
        "diablomedia/zendframework1-dojo": "*",
        "diablomedia/zendframework1-controller-action-helper-json": "*",
        "friendsofphp/php-cs-fixer": "3.16.0",
        "maglnet/composer-require-checker": "^3.0.0",
        "phpro/grumphp-shim": "^1.5.0"
    },
    "archive": {
        "exclude": [
            "/tests"
        ]
    },
    "scripts": {
        "test": "phpunit",
        "test-with-coverage": "phpunit --coverage-clover=clover.xml",
        "phpstan": "phpstan analyze -c phpstan.neon --no-progress --ansi --memory-limit=768M",
        "style-check": "php-cs-fixer fix --dry-run -vv"
    },
    "suggest": {
        "ext-dom": "Required for the DomQuery constraint"
    },
    "config": {
        "allow-plugins": {
            "phpro/grumphp-shim": true
        }
    }
}
